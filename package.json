{
  "name": "vscode-svlint",
  "displayName": "SystemVerilog Linter by zhutmost",
  "description": "Lint SystemVerilog by SvLint",
  "version": "0.0.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "svlint"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "publisher": "zhutmost",
  "repository": {
    "url": "https://github.com/zhutmost/vscode-svlint"
  },
  "contributes": {
    "configuration": {
      "properties": {
        "linter.cache": {
          "default": false,
          "description": "Cache linting results. May end up with stale results while executing commands.",
          "type": "boolean"
        },
        "linter.debug": {
          "default": false,
          "description": "Run command with debug options",
          "type": "boolean"
        },
        "linter.delay": {
          "default": 300,
          "description": "The delay in milliseconds before running linters on text change",
          "type": "number"
        },
        "linter.enabled": {
          "default": true,
          "description": "Enable or disable code linting globally",
          "type": "boolean"
        },
        "linter.linters": {
          "default": {
            "svlint": {
              "capabilities": [],
              "command": [
                "svlint",
                "-1",
                "$file"
              ],
              "configFiles": [],
              "enabled": true,
              "languages": [
                "systemverilog"
              ],
              "name": "svlint",
              "url": "https://eslint.org"
            }
          },
          "description": "The list of linters",
          "type": "object"
        },
        "linter.runOnTextChange": {
          "default": true,
          "description": "Run linters on text change",
          "type": "boolean"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-svlint.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "vscode-linter-api": "github:fnando/vscode-linter-api",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
